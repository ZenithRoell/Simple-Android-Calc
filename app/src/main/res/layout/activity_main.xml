<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:id="@+id/frag_displayy">

        <TextView
                style="@style/TextViewDisplay"
                android:id="@+id/TextView"
                android:gravity="end"
                android:layout_width="214dp"
                android:layout_height="52dp"
                android:layout_toRightOf="@+id/img_btn_delete"
                tools:text="502+414"


                android:layout_marginLeft="162dp"/>
        <ImageButton
                style="@style/ImageButtonDisplay"
                android:id="@+id/img_btn_delete"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/baseline_delete_black_18dp"/>


    </RelativeLayout>



    <LinearLayout
            android:layout_below="@+id/frag_displayy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="1dp"
           >



        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:orientation="horizontal"
                      android:layout_weight="1"

                    >

            <Button style="@style/NumberPad"
                    android:id="@+id/btn_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"

            />
            <Button style="@style/NumberPad"
                    android:id="@+id/btn_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"


            />
            <Button style="@style/NumberPad"
                    android:id="@+id/btn_three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3"

            />
            <Button style="@style/Operations"
                    android:id="@+id/btn_divide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="/"

            />



        </LinearLayout>
        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

            <Button
                    style="@style/NumberPad"
                    android:id="@+id/btn_four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4"

            />
            <Button style="@style/NumberPad"
                    android:id="@+id/btn_five"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5"

            />
            <Button style="@style/NumberPad"
                    android:id="@+id/btn_six"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="6"

            />
            <Button style="@style/Operations"
                    android:id="@+id/btn_multiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="*"
            />



        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:orientation="horizontal"
                      android:layout_weight="1">

            <Button
                    style="@style/NumberPad"
                    android:id="@+id/btn_seven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="7"

            />
            <Button
                    style="@style/NumberPad"
                    android:id="@+id/btn_eight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8"

            />
            <Button
                    style="@style/NumberPad"
                    android:id="@+id/btn_nine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="9"

            />
            <Button style="@style/Operations"
                    android:id="@+id/btn_sub"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=" - "

            />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:orientation="horizontal"
                      android:layout_weight="1">

            <Button style="@style/NumberPad"
                    android:id="@+id/btn_zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"

            />
            <Button
                    style="@style/NumberPad"
                    android:id="@+id/btn_dot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="."

            />
            <Button
                    style="@style/NumberPad"
                    android:id="@+id/btn_eql"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="="

            />
            <Button
                    style="@style/Operations"
                    android:id="@+id/btn_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+"

            />



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>